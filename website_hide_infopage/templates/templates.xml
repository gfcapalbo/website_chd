<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="assets_backend" name="website_hide_infopage assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_hide_infopage/static/src/js/website_hide_infopage.js">
                </script>

                <link rel="stylesheet" href="/website_hide_infopage/static/src/css/website_hide_infopage.css"/>
            </xpath>
        </template>



        <template id="info">
            <t t-call="website.layout">
                <t t-set="title">Therp B.V.</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <div class="container">
                        <h3>
                            This website is managed by Therp -  <a href="http://www.therp.nl">Website</a>
                        </h3>
                        <button id="back" value="back" name="action" type="button" class="btn btn-primary btn-lg pull-center back" >&lt; Back</button>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>
    </data>
</openerp>